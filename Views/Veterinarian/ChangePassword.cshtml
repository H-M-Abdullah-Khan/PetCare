@model PetCare.Models.Veterinarian.Veterinarian

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_VeterinarianLayout.cshtml";
}
<div class="page-content">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="ChangePassword" method="post">
        <div class="mb-3">
            <label for="currentPassword" class="form-label">Current Password</label>
            <input type="password" name="currentPassword" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="newPassword" class="form-label">New Password</label>
            <input type="password" name="newPassword" class="form-control" required minlength="6" />
        </div>

        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm New Password</label>
            <input type="password" name="confirmPassword" class="form-control" required minlength="6" />
        </div>

        <button type="submit" class="btn btn-primary">Change Password</button>
        <a asp-action="Profile" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        var successMessage = @Html.Raw(Json.Serialize(TempData["Success"] ?? ""));
        var errorMessage = @Html.Raw(Json.Serialize(TempData["Error"] ?? ""));

        if (successMessage) {
            Swal.fire({
                title: "Password Changed",
                text: successMessage,
                icon: "success",
                confirmButtonText: "OK"
            });
        }

        if (errorMessage) {
            Swal.fire({
                title: "Oops!",
                text: errorMessage,
                icon: "error",
                confirmButtonText: "OK"
            });
        }
    </script>
}
